<h1>Admin Dashboard</h1>

<div class="row mt-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Products</h5>
      </div>
      <div class="card-body">
        <h2 class="card-title">
          <%= link_to @product_count, admin_products_path, class: "text-decoration-none" %>
        </h2>
        <p class="card-text">Total products in database</p>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0">Categories</h5>
      </div>
      <div class="card-body">
        <h2 class="card-title">
          <%= link_to @category_count, admin_categories_path, class: "text-decoration-none" %>
        </h2>
        <p class="card-text">Total categories in database</p>
      </div>
    </div>
  </div>
</div>